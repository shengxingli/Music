<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light_trans"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/go_back6"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/actionbar_back"/>

        <ImageView
            android:id="@+id/add_love"
            android:layout_marginLeft="270dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/desk_btn_loved"/>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/music"
        android:id="@+id/music_image1" />

    <TextView
        android:id="@+id/music_name1"
        android:textSize="34dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="我管你"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/singer_name1"
        android:textSize="26dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="华晨宇"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="380dp"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="380dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_below="@id/seekBar"
            android:layout_alignEnd="@id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="0"
                android:id="@+id/music_cur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"/>
            <TextView
                android:id="@+id/music_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/play_one"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/play_icn_one"/>
        <ImageView
            android:id="@+id/before_music"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/playbar_btn_up" />
        <ImageView
            android:id="@+id/music_play1"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/playbar_btn_play"/>
        <ImageView
            android:id="@+id/after_music"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:src="@drawable/playbar_btn_next"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/music_list"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/playbar_btn_playlist"/>
    </LinearLayout>

</LinearLayout>
