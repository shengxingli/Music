<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_light_trans">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_set_back"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/actionbar_back"/>
        <TextView
            android:layout_marginLeft="110dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="24dp"
            android:textColor="#000000"
            android:text="修改用户信息"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="手机号:"
                android:textSize="20dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/et_userPhone"
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="请输入新手机号"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="密码:"
                android:textSize="20dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/et_userPwd"
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="请输入新密码"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="用户名:"
                android:textSize="20dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/et_userName1"
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="请输入新用户名"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="头像:"
                android:textSize="20dp"
                android:gravity="center"/>
            <com.example.user.music.image.CircleImageView
                android:src="@mipmap/p1"
                android:id="@+id/image_user"
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_back"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="点击修改信息"
        android:textColor="#ff0000"
        android:textSize="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/frame3"
        />
</LinearLayout>

