<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_light_trans">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/go_back13"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/actionbar_back"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="120dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="录制并上传音频"
            android:textSize="24dp"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/startVideo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:text="开始录制"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/stopVideo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="停止录制"
        android:textSize="24dp"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/playVideo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:text="播放音频"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/pauseVideo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:text="暂停/播放音频"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/stopPlayVideo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:text="停止音频"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/uploadVideo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:text="上传音频"/>
</LinearLayout>
