<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/green_light_trans">
    <com.example.user.music.image.CircleImageView
        android:id="@+id/song_sheet_image"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp"
        android:src="@drawable/music_list"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="BTS"
            android:textSize="20dp"
            android:id="@+id/song_sheet_name"/>
        <TextView
            android:id="@+id/song_sheet_count"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="100首"
            android:textSize="20dp"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/delete"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="删除"
            android:textSize="16dp"/>
    </LinearLayout>
</LinearLayout>
